// -- variable --
base-color = rgb(35, 24, 21)
theme-orange = rgb(231, 119, 34)
theme-blue = rgb(116, 181, 228)
theme-gray = rgb(181, 181, 182)
BG-color = rgb(255, 255, 255)

// --- base ---
html
  font-family 'Noto Sans JP', monospace, "Yu Gothic", YuGothic, "ヒラギノ角ゴ ProN W3", Hiragino Kaku Gothic ProN, "メイリオ", Meiryo, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  color base-color
  background-color BG-color
  @media screen and (max-width: 400px)
    font-size 10px
  @media screen and (min-width: 400px) and (max-width: 600px)
    font-size 14px
  @media screen and (min-width: 600px) and (max-width: 900px)
    font-size 15px
  @media screen and (min-width: 900px)
    font-size 16px
    word-spacing 1px

*, *:before, *:after
  box-sizing border-box
  margin 0

ul
  list-style none
  padding-left 0px

img
  width auto
  height auto
  max-width 100%
  max-height 100%

table
  border-collapse collapse
  & th
    background-color base-color
    color white
    font-weight normal
  & th, & td
    border solid 1px black
    padding 1em 1em

code
  font-family 'SourceCodePro', monospace